extends layout

block content
  .w3-container.w3-padding-64.w3-theme-l5
    h1.welcome-message Educational Archive
  .w3-container
    .w3-card-4.custom-card
      .w3-container.w3-theme
        h2 Register
      form.w3-container(action="/register", method="post")
        .w3-section
          label(for="username") Username
          input.w3-input.w3-border(type="text", name="username", required)
        .w3-section
          label(for="email") Email
          input.w3-input.w3-border(type="email", name="email", required)
        .w3-section
          label(for="password") Password
          input.w3-input.w3-border(type="password", name="password", required)
        .w3-section
          label(for="confirm_password") Confirm Password
          input.w3-input.w3-border(type="password", name="confirm_password", required)
        button.w3-button.w3-block.w3-theme-d1.w3-margin-top(type="submit") Register
        button.w3-button.w3-block.w3-theme-d1.w3-margin-top(href="/") Back