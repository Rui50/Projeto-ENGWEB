extends layout

block content
  .w3-container.w3-padding-64.w3-theme-l5
    .w3-card-4.w3-margin.w3-white
      .w3-container.w3-theme
        h2 Error Occurred
      .w3-container
        p #{error.message}
        p Status Code: #{error.status}
        if error.stack
          pre #{error.stack}
        if error.redirect
          a.delete-button(href=`/${error.redirect}`) Redirect
