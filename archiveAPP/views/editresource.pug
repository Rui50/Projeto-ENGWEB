extends layout

block content
  .centered-nav.w3-bar.w3-theme-d5
    .navbar-left

    .navbar-middle
        a.w3-bar-item.w3-button(href="/resources") Recursos
        a.w3-bar-item.w3-button(href="/profile") Profile
        a.w3-bar-item.w3-button(href="/news") News
        a.w3-bar-item.w3-button(href="/resources/rankings") Rankings
        if userLevel === 'admin'
           a.w3-bar-item.w3-button(href="/adminpanel") Admin Panel
        
    .navbar-right
        a.w3-bar-item.w3-button(href="/logout") Logout

  .w3-container.w3-padding-64.w3-theme-l5.text-center
    h1.welcome-message Edit Resource

    form(action=`/resources/edit/${resource._id}`, method="post")
        .w3-card-4.custom-card
            .w3-container.w3-theme
                h2 Resource Details
            .w3-container
                label(for="type") Type:
                input.w3-input(type="text", name="type", required, value=resource.type)
                label(for="title") Title:
                input.w3-input(type="text", name="title", required, value=resource.title)
                label(for="subtitle") Subtitle:
                input.w3-input(type="text", name="subtitle", value=resource.subtitle)
                label(for="year") Year:
                input.w3-input(type="number", name="year", value=String(resource.year))
                label(for="creationDate") Creation Date:
                input.w3-input(type="date", name="creationDate", value=resource.creationDate)
                label(for="author") Author:
                input.w3-input(type="text", name="author", required, value=resource.author)
                label(for="visibility") Visibility:
                select.w3-select(name="visibility", required)
                    option(value="private" selected=resource.visibility==="private") Private
                    option(value="public" selected=resource.visibility==="public") Public
                label(for="tags") Tags (separated by commas):
                input.w3-input(type="text", name="tags", value=resource.tags.join(', '))
            .w3-container.w3-padding
                button.w3-button.w3-block.w3-theme-d1(type="submit") Save Changes

    a.w3-button.w3-block.w3-theme-d2.w3-margin-top(href=`/resources/${resource._id}`) Cancel
